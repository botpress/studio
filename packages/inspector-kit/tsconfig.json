{
  // Manage references here
  "references": [],

  // Defaults (don't change this)
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    // For some reason this cannot be set to true otherwise rollup fails to import json...
    "composite": false,
    // This setting requires composite so we'll disable that for now
    // "tsBuildInfoFile": "dist/.tsbuildinfo",

    // Specific settings for npm package
    "target": "es6",
    "declaration": true,
    "sourceMap": false,

    // We use react
    "jsx": "react",
    "lib": [
      "dom",
      // Should be es2021 but bluebird-global doesn't work with that version...
      "es2019",
      "es2021.intl"
    ],
    "resolveJsonModule": true
  },
  "include": ["src", "src/**/*.json"],
  "exclude": ["dist", "node_modules", "src/**/*.test.tsx", "src/**/*.stories.tsx"]
}
