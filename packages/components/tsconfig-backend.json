{
  "compilerOptions": {
    "declaration": false,
    "sourceMap": false,
    "strict": false,
    "declarationMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./",
    "moduleResolution": "node",
    "target": "es2019",
    "types": ["reflect-metadata", "bluebird-global"],
    "typeRoots": ["../../studio-be/src/typings", "./node_modules/@types", "../../node_modules/@types"],
    "paths": {
      "common/*": ["../../studio-be/src/common/*"],
      "botpress/sdk": ["../../studio-be/src/sdk/botpress.d.ts"]
    }
  },
  "exclude": ["**/*.test.ts", "**/views/**"],
  "include": ["../../studio-be/src/typings/*.d.ts", "**/*.ts"]
}
